
@{
    Layout = "~/Views/Shared/_LayoutDefaults.cshtml";
    var data = ViewBag.Root as List<BaseMongoDB.Database.CPMenuEntity>;
}
<div class="alert-info">
    @ViewBag.Message
</div>
<div class="card">
    <div class="card-header card-header-icon">
        <h4 class="card-title">
           <a href="@Url.Action("Index")" class="btn btn-sm btn-fab btn-danger"><i class="material-icons">reply</i></a>
            <a href="javascript:void(0)" onclick="execute('create')" class="btn btn-sm btn-success pull-right"><i class="material-icons">save</i> Save</a>
        </h4>
        
    </div>
    <div class="card-body">
        <form name="myform" asp-action="Create" asp-controller="cpmenu" method="post" enctype="application/x-www-form-urlencoded">
            <input type="hidden" id="ArrID" name="ArrID" value="" />
            <input type="hidden" id="ctrl" value="cpmenu" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="bmd-label-floating">Tên :</label>
                        <input type="text" name="Name" class="text-light form-control" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="bmd-label-floating">Type :</label>
                        <input type="text" name="Type" class="text-light form-control" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class=""> Chuyên mục : </label>
                    <select class="form-control" name="ParentID">
                        <option value="0">Root</option>
                        @{
                            if (data != null)
                            {
                                int count = data.Count;
                                for (int i = 0; i < count; i++)
                                {
                                    var item = data[i];
                                    <option value="@item.ID">@item.Name</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <input type="hidden" name="Activity" value="false"/>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" onclick="thatActive(this,'Activity')"/>
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating"> Mô tả : </label>
                        <textarea name="Summary" class="form-control" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
</div>