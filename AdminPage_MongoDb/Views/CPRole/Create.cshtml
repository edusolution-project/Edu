
@{
    Layout = "~/Views/Shared/_LayoutDefaults.cshtml";
}
<div class="alert-info">
    @ViewBag.Message
</div>
<div class="card">
    <div class="card-header card-header-icon">
        <h4 class="card-title">
           <a href="@Url.Action("Index")" class="btn btn-sm btn-fab btn-danger"><i class="material-icons">reply</i></a>
            <a href="javascript:void(0)" onclick="excute('create')" class="btn btn-sm btn-success pull-right"><i class="material-icons">save</i> Save</a>
        </h4>
        
    </div>
    <div class="card-body">
        <form name="myform" asp-action="Create" asp-controller="Roles" method="post" enctype="application/x-www-form-urlencoded">
            <input type="hidden" id="ArrID" name="ArrID" value="" />
            <input type="hidden" id="ctrl" value="cprole" />
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="bmd-label-floating">Tên role :</label>
                        <input type="text" name="Name" class="text-light form-control">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
</div>