@using ServiceBaseNet;
@{
    ViewData["Title"] = "Quản lý hệ thống";
    Layout = "~/Views/Shared/_LayoutDefaults.cshtml";
    var data = ViewBag.Data as List<CusMenuAttribute>;
}
<div class="row">
    @{
        if (data != null)
        {
            int _count = data.Count;
            for (int i = 0; i < _count; i++)
            {
                var item = data[i];
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                    <a class="card card-stats" href="@Url.Action("Index",item.CModule)">
                        <div class="card-header card-header-@item.Color card-header-icon">
                            <div class="card-icon"><i class="material-icons">@item.Icon</i></div>
                        </div>
                        <div class="card-footer"><b>@item.Name</b></div>
                    </a>
                </div>
            }
        }
    }
</div>
