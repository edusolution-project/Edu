                },
                isDocType(path) {
                    if (path == null || path == "") return false;
                    var idx = path.toString().lastIndexOf('.');
                    if (idx <= 0) {
                        var ext = path.substring(idx, path.length - idx);
                        return this.allow_doc_ext.findIndex(t => t === ext) >= 0;
                    }
                },
                changeAddSubject(obj) {
                    let _that = this;
                    //debugger
                    if (_that.list_grades_full.findIndex(item => obj == item.ID) == -1) {
                        _that.list_grades_full.forEach(function (sbj) {
                            //console.log(obj.UID)
                            if (sbj.ID == obj.UI) {
                                sbj.GradeID = ''
                                sbj.CourseID = ''
                                sbj.TeacherID = ''
                                sbj.SkillID = ''
                                return
                            }
                        });
                    }
                },
                loadDocsNormal() {
                    this.getData();
                    //alert("tai lieu thuong")
                },
                loadDocsInteractive() {
                    this.getData();
                    //alert("tai lieu tuong tac")
                },
                tabChange(a = 0) {
                    // có thể load data theo từng tab để tối ưu hiệu năng
                    // this.getData()
                    let _that = this
                    _that.tab.forEach(function (item, k) {
                        _that.tab[k] = false;
                    })
                    this.tab = _that.tab
                    this.tab[a] = true
                    switch (a) {
                        case 0:
                            history.replaceState({ tab: a }, "Tài liệu thường", "#docsnormal");
                            this.isInteractive = false;
                            this.loadDocsNormal();
                            //this.searchTerm = '';
                            break;
                        case 1:
                            history.replaceState({ tab: a }, "Tài liệu tương tác", "#docsinteractive");
                            this.isInteractive = true;
                            this.loadDocsInteractive();
                            //this.searchTerm = '';
                            break;
                    }
                    this.$forceUpdate()
                },
                showDocsInteractive(obj) {
                    let _that = this;
                    let _form = new FormData();
                    let _url = '@processUrl("GetCourseDetail", "Curriculum")';
                    if (obj != null) {
                        _that.docsInteractive.Name = obj.Name;
                        _that.docsInteractive.Image = obj.Image;
                        _that.docsInteractive.Creator = obj.TeacherName;
                        _that.docsInteractive.ID = obj.ID;
                        //debugger
                        _form.append('ID', obj.ID)
                        axios.post(_url, _form)
                            .then(response => {
                                _that.docsInteractive.ListChapters = response.data.Data.Chapters;
                                //_that.docsInteractive.ListClasses = response.data.Data.Classes;
                                //debugger
                            }).catch(e => { })
                    }
                    _that.$bvModal.show('modal_docsinteractive')
                },
                getMyClass() {
                    let _that = this
                    let _form = new FormData()
                    _form.append('Center', '@center')
                    _url = '@processUrl("GetClassList", "Class")'
                    axios.post(_url, _form)
                        .then(response => {
                            //debugger
                            _that.docsInteractive.ListClasses = response.data.Data
                        }).catch(e => { })
                },
                AddToMyCourse() {
                    let _that = this;
                    let _form = new FormData();
                    let _url = '@processUrl("AddToMyCourse", "Class")';
                    _form.append('CourseID', _that.docsInteractive.ID);
                    _form.append('CenterCode', '@center');
                    _form.append('CourseName', _that.docsInteractive.Name);
                    if (_that.isCreateNewClass) {
                        _form.append('Name', _that.newClass.Name);
                        _form.append('StartDate', this.formatDate(_that.newClass.StartDate));
                        _form.append('EndDate', this.formatDate(_that.newClass.EndDate));
                        _form.append('Description', _that.newClass.Description);
                        _form.append('isCreateNewClass', _that.isCreateNewClass);
                    }
                    //debugger
                    if (_that.docsInteractive.ClassID == null || _that.docsInteractive.ClassID == "") {
                        var result = window.confirm("Bạn chưa chọn lớp để thêm học liệu, học liệu sẽ được thêm vào mục TẠO BÀI GIẢNG trong tài khoản của bạn");
                        if (result == true) {
                            this.isLoading = true
                            axios.post(_url, _form)
                                .then(response => {
                                    this.isLoading = false;
                                    this.hideModal();
                                }).catch(e => {
                                    this.isLoading = false;
                                    alert(e)
                                })
                        }
                        else {
                            alert("Chọn lớp để thêm");
                        }
                    }
                    else {
                        if (!_that.isCreateNewClass) {
                            _form.append('ClassID', _that.docsInteractive.ClassID);
                        }
                        this.isLoading = true
                        axios.post(_url, _form)
                            .then(response => {
                                this.isLoading = false;
                                this.hideModal();
                                if (_that.docsInteractive.ClassID == null || _that.docsInteractive.ClassID == "")
                                    alert("Tài liệu đã được thêm vào danh mục bài giảng của bạn!");
                                else if (_that.isCreateNewClass) {
                                    alert("Lớp " + _that.newClass.Name + " đã được tạo, tài liệu đã được thêm vào lớp " + _that.newClass.Name + ".");
                                }
                                else
                                    alert("Tài liệu đã được thêm vào lớp của bạn!");
                            }).catch(e => {
                                this.isLoading = false;
                                alert(e)
                            })
                    }
                },
                formatDate(value) {
                    if (value) {
                        return moment(String(value)).format('YYYY-MM-DD')

                    }
                },
                replaceGooglePath(str) {
                    return str.replace("https://drive.google.com/uc?export=view&id=", "https://drive.google.com/file/d/") + "/preview";
