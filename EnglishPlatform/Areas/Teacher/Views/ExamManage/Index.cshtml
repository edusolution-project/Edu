                },
                formatExam: {
                    titleFormat: '',//tên ma trận đề
                    titleExam: '', //tên kì thi, tên bài kiểm tra
                    timer: 1,
                    limit: 1,
                    template: '@BaseCustomerEntity.Database.CLASSSUBJECT_TYPE.EXAM',
                    totalExam: 1,
                    subject: '',
                    isNewMatrix: true,
                    matrixID:'',
                    format: {
                        level: '',
                        tags: [],
                        tagsName:[],
                        levelKnow: {
                            theory: 0,//lý thuyết
                            exercise: 0 //bài tập
                        }, //nhận biết
                        levelUnderstanding: {
                            theory: 0,//lý thuyết
