                    nameExam: '',
                    startTime: '',
                    endTime: '',
                    timer: '',
                    limit: '',
                    selectAll: false
                },
                defaultOutput: {
                    total: 0,
                    percentKnow: 0,
                    percentUnderstand: 0,
                    percentManipulate: 0,
                    percentManipulatehighly: 0,
                    percentTotal:100
                },
                customOutput: {
                    total: 0,
                    totalKnow: 0,
                    totalUnderstand: 0,
                    totalManipulate: 0,
                    totalManipulatehighly: 0,
                    percentTotal: 0,
                    percentKnow: 0,
                    percentUnderstand: 0,
                    percentManipulate: 0,
