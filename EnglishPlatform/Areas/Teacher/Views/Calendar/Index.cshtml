                                : "";
                        }
                        var time = bodyEvent.querySelector("input[name='Time']");
                        if (time != null) {
                            time.value = timeEvent;
                        }
                        var date = bodyEvent.querySelector("input[name='Date']");
                        if (date != null) {
                            date.value = dateEvent;
                        }
                        formEvent.classList.add("view-form");
                    }
                }
            })
        }

