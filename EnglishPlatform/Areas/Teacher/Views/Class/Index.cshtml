                    this.detailtab[a] = true
                    this.$forceUpdate()
                },
                //support
                formatShortDate(date) {
                    if (moment(date) < moment(new Date(2000, 1, 1))) return "-"
                    return moment(date).format("DD/MM/YYYY")
                },
                repDate(svalue, evalue) {
                    this.eDate = evalue;
                    this.sDate = svalue;
                },
                matchSubject(obj, item) {
                    return item.IsActive || item.ID == obj.SubjectID
                },
                matchGrade(obj, item) {
                    return item.SubjectID == obj.SubjectID && (item.IsActive || item.ID == obj.GradeID)
                },
                matchTeacher(obj, item) {
                    return (item.SubjectID == obj.SubjectID)
                        && (item.IsActive || item.ID == obj.TeacherID)
                },
                matchCommonTeacher(obj, item) {
                    //console.log(obj);
                    console.log(item);
                    return (item.ID == obj.TeacherID)
                },
                matchCourse(obj, item) {
                    //console.log(this.courseSource)
                    return item.SubjectID == obj.SubjectID && item.GradeID == obj.GradeID
                        //&& item.SkillID == obj.SkillID
                        && (item.IsActive || (item.ID == obj.CourseID))
                },
                uniqueList(listtc) {
                    //console.log(listtc);
                    var ret = [];
                    listtc.forEach(function (item, index) {
                        if (ret.findIndex(t => t.ID == item.ID) < 0)
                            ret.push(item);
                    });
                    //console.log(ret);
                    return ret;
                },
                domDecoder(str) {
                    if (str == null)
                        return "";
                    //console.log(str);
                    let parser = new DOMParser();
                    let dom = parser.parseFromString('<!doctype html><body>' + str, 'text/html');
                    return dom.body.textContent;
                },
                formatDate(value) {
                    if (value) {
                        return moment(String(value)).format('YYYY-MM-DD')
                    }
                },
                exportExcel(tableid) {
                    var _filename = "Danh sách lớp học";
                    var uri = 'data:application/vnd.ms-excel;base64,'
                        , template = '<html xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:x="urn:schemas-microsoft-com:office:excel" xmlns="http://www.w3.org/TR/REC-html40"><head><meta http-equiv=Content-Type content="text/html; charset=utf-8"><!--[if gte mso 9]><xml><x:ExcelWorkbook><x:ExcelWorksheets><x:ExcelWorksheet><x:Name>{worksheet}</x:Name><x:WorksheetOptions><x:DisplayGridlines/></x:WorksheetOptions></x:ExcelWorksheet></x:ExcelWorksheets></x:ExcelWorkbook></xml><![endif]--><style>.text-style{mso-number-format:"#?/?"}</style></head><body><table>{table}</table></body></html>'
                        , base64 = function (s) { return window.btoa(unescape(encodeURIComponent(s))) }
                        , format = function (s, c) { return s.replace(/{(\w+)}/g, function (m, p) { return c[p]; }) }
                    //var table = document.getElementById("ed_table");
                    var table = document.getElementById(tableid);
                    //console.log(tableid);
                    //var table = $('#' + tableid);
                    var ctx = { worksheet: 'Worksheet', table: table.innerHTML }
                    //window.location.href = uri + base64(format(template, ctx));
                    var link = document.createElement('a');
                    if (typeof link.download === 'string') {
                        link.href = uri + base64(format(template, ctx));
                        link.download = _filename;
                        //Firefox requires the link to be in the body
                        document.body.appendChild(link);
                        //simulate click
                        link.click();
                        //remove the link when done
                        document.body.removeChild(link);
                    } else {
                        window.open(uri + base64(format(template, ctx)));
                    }
                },
                tabChange(a = 0) {
                    let _that = this
                    _that.tab.forEach(function (item, k) {
                        _that.tab[k] = false;
                    })
                    this.tab = _that.tab
                    this.tab[a] = true
                    switch (a) {
                        case 0:
                            history.replaceState({ tab: a }, "Danh sách lớp học", "#listclasses");
                            this.getData()
                            break;
                        case 1:
                            history.replaceState({ tab: a }, "Báo cáo", "#report");
                            this.getReport();
                            break;
                    }
                    this.$forceUpdate()
                },
                getReport(defaultFilter = 'allCenters') {
                    let _that = this
                    let _form = new FormData()
                    let _url = ''
                    if (defaultFilter.includes('allCenters'))
                        _url = '@processUrl("GetManageReport","Class")'
                    else if(defaultFilter.includes('teacher'))
                        _url = '@processUrl("GetTeacherReport","Class")'
                    _that.dataReport = []
                    axios.post(_url, _form)
                        .then(response =>
                        {
                            //debugger
                            var data = response.data.Data;
                            this.dataReport = data
                            //var data10 = response.data[10] //khoi 10
                            //var data11 = response.data[11] //khoi 11
                            //var data12 = response.data[12] //khoi 12
                            //var data99 = response.data[99] //khoi khac
                        })
                        .catch(e => { alert(e) })
                },
                getPercent(point, total) {
                    if (total == 0) return 0
                    else return ((point / total) * 100).toFixed(2)
                },
                displayTitle(obj) {
                    //console.log(obj);
                    if(obj.TeacherID == '@userid')
                        return obj.Name;
                    return obj.Name + " [Học liệu chia sẻ]";
                }
            }
        });

    </script>
