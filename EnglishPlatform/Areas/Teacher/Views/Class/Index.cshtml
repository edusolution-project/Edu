                    var end = moment().add(29, 'days');
                    $('input[name="dates"]').daterangepicker({
                        startDate: start,
                        endDate: end,
                        locale: {
                            format: "DD/MM/YYYY",
                        }
                    }, function (s, e, label) {
                        RepDate(s, e);
                        GetData();
                    });
                    $('input[name="dates"]').siblings().removeClass('inactive');
                    isSearchDate = true;
                    $('input[name="dates"]').focus().click();
                    _that.startdate = start;
                    _that.enddate = end;
                    GetData()
