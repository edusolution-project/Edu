                            @*<th>Trạng thái</th>*@
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="past-region" style="display: none">
                <div class="block-title">
                    <h2>Lớp đã kết thúc</h2>
                </div>
                <table id="pastCourse" class="table" width="100%" cellspacing="0">
                    <thead>
