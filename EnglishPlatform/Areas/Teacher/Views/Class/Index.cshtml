                        ID: '',
                        SkillID: '',
                        SubjectID: '',
                        GradeID: '',
                        TeacherID: '',
                        CourseID: '',
                        TypeClass: '@BaseCustomerEntity.Database.CLASS_TYPE.STANDARD'
                    }
