                        <td>{{item.email}}</td>
                        <td>{{item.phone}}</td>
                        <td v-bind:class="{good : (item.per > 50)}">{{item.per+'%'}}</td>
                        <td>{{item.last_update}}</td>
                        <td v-bind:class="{good : (item.score > 5)}">{{item.score + ' điểm'}}</td>
                    </tr>
