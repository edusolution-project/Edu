                                <chap-content v-for="(item,k) in list_chapters" v-if="matchedItem(item, obj.ID + '-')"
                                              v-bind:data="item"
                                              v-bind:pos="k"
                                              v-bind:subchaps="filterItem(item, list_chapters)"
                                              v-bind:lessons="filterItem(item, list_lessons)"></chap-content>
                            </ul>
                        </b-collapse>
                    </div>
                </li>
            </ul>
        </div>
