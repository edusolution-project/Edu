                            }).catch(e => { this.isLoading = false })
                        this.isLoading = false
                        this.$bvModal.show("detailLessonInWeek-modal")
                    }
                    else return
                },
                roundPoint(value, precision) {
                    if (value > 0) {
                        value = value / 10
                        var multiplier = Math.pow(10, precision || 0);
                        return Math.round(value * multiplier) / multiplier;
                    }
                    else return value
                },
                loadDetailExam(obj) {
