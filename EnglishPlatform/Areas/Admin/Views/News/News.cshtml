                            @*<button type="button" class="btn btn-primary" onclick="window.location.href='/admin/News/NewsForm'" title="Thêm tin"> <i class="fas fa-plus"></i> </button>*@
                            <button type="button" class="btn btn-primary" data-placement="top" title="Thêm tin" onclick="Adds(this)" data-toggle="modal" data-target="#ModalCenter"> <i class="fas fa-plus"></i> </button>
