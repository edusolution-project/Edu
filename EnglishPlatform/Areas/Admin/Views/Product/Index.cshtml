    function Edits(id, urlGetData, urlPostData, _this) {
        //Add(_this);
        var modal = document.querySelector(_this.getAttribute("data-target"));
        $(modal).find('[id=ProductTitle]').text("Sửa thông tin gói học");
        $(modal).find("[name=Save]").text("Lưu");
