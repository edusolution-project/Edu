            var duyetValue = data.value;
            var ctrl = data.dataset.control;
            var isActive = data.checked;
            var arr = duyetValue.split(',');
            if (arr.length == 1) {
                var obj = {
                    ctrlName: ctrl,
                    actName: duyetValue,
                    isActive: isActive,
                    type: type
                }
                listData.push(obj);
            } else {
