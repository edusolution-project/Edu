            var root = document.getElementById(parent);
            var listData = root.querySelectorAll('input[name="' + name + '"]');
            for (var i = 0; listData != null && i < listData.length; i++) {
                listData[i].checked = self.checked;
            }
        }

        $("#admin-submit").click(function () {
            var type = "admin";
            
