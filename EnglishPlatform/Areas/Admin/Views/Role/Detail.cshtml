            for (var i = 0; i < listDuyet.length; i++) {
                var duyet = listDuyet[i];
                var xoa = listXoa[i];
                var sua = listSua[i];
                var them = listThem[i];
                var xem = listXem[i];

                if (duyet.disabled != true && duyet.value != "") {
                    proccessDataCheckbox(arrData, duyet,type);
                }
                if (xoa.disabled != true && xoa.value != "") {
                    proccessDataCheckbox(arrData, xoa,type);
                }
