        }

            .our-product .media img {
                max-width: 100%;
                max-height: 100%;
            }

    @@media (max-width: 800px) {
        .our-product .media {
            width: 100%;
            margin-bottom: 24px;
        }
    }

    .content-box .box-title {
        font-size: 32px;
        line-height: 44px;
        color: #05517B;
        display: inline-block;
        font-weight: 600;
        margin-bottom: 24px;
        position: relative;
    }

        .content-box .box-title .underline {
            height: 4px;
            background: #C1272C;
            position: absolute;
        }

    .content-box .content {
        font-size: 16px;
        font-weight: normal;
        line-height: 22px;
        color: #000000;
    }

    .trial-top {
        width: 0px;
        height: 0;
        border-left: 1140px solid transparent;
        border-right: 0px solid transparent;
        border-bottom: 80px solid #08486B;
        margin-top: -60px;
    }


    .trial {
        background: #08486B;
        padding: 20px 0;
    }

        .trial .box-title {
            font-size: 24px;
            line-height: 33px;
            font-style: normal;
            font-weight: normal;
        }

        .trial .media {
        }

        .trial .content-box {
            margin-left: 100px;
        }

        .trial .trial-form {
            width: 560px;
            height: 252px;
            background: #FFFFFF;
            border-radius: 3px;
            padding: 24px;
            text-align: left;
        }

    @@media (max-width: 800px) {
        .trial .content-box {
            margin: 0;
        }

        .trial .trial-form {
            width: 100%;
        }
    }

    .trial .trial-form label {
        font-style: normal;
        font-size: 14px;
        line-height: 19px;
    }

    .trial .trial-form input {
        background: #FFFFFF;
        border: 0.5px solid #A8A8A8;
        box-sizing: border-box;
        border-radius: 3px;
    }

    .trial button {
        margin-top: 32px;
        width: 251px;
        height: 44px;
        left: 735px;
        top: 402px;
        background: #C1272C;
        border-radius: 100px;
        /*font-family: Lato;*/
        font-style: normal;
        font-size: 18px;
        line-height: 22px;
        /* identical to box height */
        text-align: center;
        text-transform: uppercase;
        color: #FFFFFF;
        border: none;
    }

    .news .categories {
        margin-bottom: 10px;
        line-height: 16px;
        color: #CCC;
    }

        .news .categories a {
            font-weight: 600;
            font-size: 20px;
            line-height: 27px;
            color: #A0A0A0;
            margin: 0 16px;
        }

            .news .categories a:first-child {
                margin-left: 0
            }

            .news .categories a:last-child {
                margin-right: 0
            }

            .news .categories a.active, .news .categories a:hover {
                text-decoration: none;
                color: #05517B;
            }

    .news-item {
        border-bottom: solid 1px #CCC;
    }

    .news-hot .news-item:first-child,
    .news-top .news-item:first-child {
        padding-top: 0 !important;
    }

    .news-hot .news-item:last-child,
    .news-top .news-item:last-child {
        border-bottom: none;
    }

    .news-item .news-title {
        font-weight: bold;
        padding-bottom: 10px;
        font-size: 16px;
    }

    .news-item .news-desc {
        font-size: 14px;
    }

    .news-item .news-time {
        font-size: 14px;
        color: #99A1A6;
    }

        .news-item .news-time::before {
            background: url('/images/icon/clock.png');
            content:url('/images/icon/clock.png');
            width: 14px;
            height: 14px;
        }

    @@media (max-width: 800px) {
        .news .categories {
            font-size: 0;
        }

