<script>

    var isMobileDevice = function () {
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            return true;
        } else {
            return false;
        }
    }

    var showDropDown = function (menu) {

        setActiveMenu(menu);

        var isDisplay = $('#chil_aboutus').css('display');
        if (isDisplay.includes("none")) {
            $('#chil_aboutus').css('display', 'block');
        }
        else {
            $('#chil_aboutus').css('display', 'none');
        }
    }

    var responeMenu = function () {
        //debugger
        var w = $(window).width();
        if (w < 1024) {
            document.getElementById("menuMobile").style.display = "";
            document.getElementById("menuDesktop").style.display = "none";
        }
        else {
            document.getElementById("menuMobile").style.display = "none";
            document.getElementById("menuDesktop").style.display = "";
        }
    }

    $(document).ready(function () {
        responeMenu();
    });

    //window.onresize = responeMenu();
    $(window).resize(function () {
        responeMenu();
    });

    function myFunction() {
        var x = document.getElementById("myLinks");
        if (x.style.display === "block") {
            x.style.display = "none";
        } else {
            x.style.display = "block";
        }
    }
</script>
