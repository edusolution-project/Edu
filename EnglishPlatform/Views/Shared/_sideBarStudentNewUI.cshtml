@using Microsoft.AspNetCore.Http
@{
    string center = ViewContext.RouteData.Values["basis"]?.ToString();
    string proccesUrl(string act, string ctrl)
    {
        string url = Url.Action(act, ctrl);

        return $"/{center}{url}";
    }
}
