    <div class="card-header">
        <a href="/" class="logo" title="educoo"><img src="/images/Logo.png" /></a>
    </div>
    <div class="menu-bar">
        <ul>
            <li for="home">
                <a href="@proccesUrl("Index", "Home")" title="Trang chủ"><i class="ic ic-home"></i>Trang chủ</a>
            </li>
            <li for="profile">
                <a href="@proccesUrl("Profile","Home")" title="Cá nhân"><i class="ic ic-user"></i>Cá nhân</a>
            </li>
            <li for="class">
                <a href="@proccesUrl("Index" , "Course")" title="Lớp học của tôi"><i class="ic ic-book"></i>Lớp học của tôi</a>
            </li>
            <li for="calendar">
                <a href="@proccesUrl("Index" , "Calendar" )" title="Lịch học của tôi"><i class="ic ic-celendar"></i>Lịch học của tôi</a>
