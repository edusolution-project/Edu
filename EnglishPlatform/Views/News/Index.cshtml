</script>

@section Scripts{
    <script>
        new Vue({
            el: ".category-box",
            mounted() {
            },
            data: {
                mainTitle: 'Tin tức',
                catID: '0',
                listnews: []
            },
            methods: {
            }
        });

        function loadData() {
           $.ajax({
                url: '@Url.Action("getnewslist", "home")',
                type: "post",
                dataType: "json",
               success: function (result) {

                    var data=new Vue({
                        el: '#newshot',
                        data: {

                            newshot: result.NewsHot
                        },

                        el: '#newstop',
                        data: {
                            newstop: result.NewsTop
                        }
                    })
                }
            });
    };

    $(document).ready(function () {
        loadData();
    });
    </script>
}
