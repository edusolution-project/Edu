                    @{
                        if (chapterdata != null)
                        {
                            int count = chapterdata.Count;
                            for (int i = 0; i < count; i++)
                            {
                                var item = chapterdata[i];
                                <tr>
                                    <td align="center">
                                        <div class="form-check">
                                            <label class="form-check-label">
