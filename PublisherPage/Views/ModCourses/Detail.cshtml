@using BasePublisherMVC.Models;
@using BasePublisherMVC.Globals;
@using BasePublisherModels.Database;
@using BasePublisherMVC.ViewModel
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutCourse.cshtml";
    var obj = ViewBag.Data as ModCourseViewModel;
    var chapterdata = ViewBag.Chapters as List<ModChapterViewModel>;
}

<div class="card">
    <div class="card-header card-header-icon">
        <h4 class="card-title" style="float: left">
            <a href="@Url.Action("Index")" class="btn btn-sm btn-fab btn-danger"><i class="material-icons">reply</i></a>
        </h4>
    </div>
    <div class="card-body">
        <form>
            <div class="row">
                <div class="col-md-12">
                    <div>
                        <label class="bmd-label-floating" style="font-size:200%"><b>@obj.Name</b></label>
                    </div>
                    <div>
                        <label class="bmd-label-floating">@obj.Description</label>
                    </div>
                </div>
                <div class="col-md-12" style="margin-top: 10px">
                    <div>
                        <label class="bmd-label-floating">Bộ giáo trình: <b>@obj.Program.Name</b> - Môn học: <b>@obj.Subject.Name</b> - Cấp độ: <b>@obj.Grade.Name</b> </label>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-header card-header-image text-right">
        <form name="myform" asp-action="Create" method="post" enctype="application/x-www-form-urlencoded">
            <input type="hidden" id="ctrl" value="ModChapters" />
            <input type="hidden" id="filter_Course" value="@obj.ID" />
            <script type="text/javascript">
                var Search = [
                    "filter_Search", "SearchText",
                    "filter_Course", "CourseID"
                ];
                var SearchDefault = [
                    "1", "PageIndex",
                    "1", "LangID",
                    "20", "PageSize",
                    "0", "CourseID"
                ];

/**/</script>

            @Html.AntiForgeryToken()
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-5">
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-7">
                        @DynamicViews.GetCommand("createsub| Tạo mục mới,delete|Xóa")
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-5">
                        <div style="text-align: left; color: #999; font-size: 120%;"><b>Danh sách chương/mục</b></div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-7">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="">
            <table class="table table-bordered">
                <thead class="text-center">
                    <tr>
                        <th width="5%">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" onclick="checkall(this)" />
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </th>
                        <th>Tên</th>
                        <th>Chương gốc</th>
                        <th>Vị trí</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (chapterdata != null)
                        {
                            int count = chapterdata.Count;
                            for (int i = 0; i < count; i++)
                            {
                                var item = chapterdata[i];
                                <tr>
                                    <td align="center">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input name="cid" class="form-check-input" value="@item.ID" type="checkbox" />
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    </td>
                                    <td align="center"><a class="text-info" href="@Url.Action( "Detail","ModChapters", new { id = item.ID })">@item.Name</a></td>
                                    @if (!string.IsNullOrEmpty(item.ParentID) && item.ParentID != "0")
                                    {
                                        var root = chapterdata.Find(o => o.ID == item.ParentID);
                                        <td align="center"><a class="text-info" href="@Url.Action( "Detail","ModChapters", new { id = root.ID })">@root.Name</a></td>
                                    }
                                    else
                                    {
                                        <td align="center">---</td>
                                    }
                                    <td align="center">@item.Order</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Contents/js/publisher.js"></script>
}
