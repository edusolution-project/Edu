        wrapper.find(".edit").hide()

        $(startdateHolder).find(".date-input").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yy',
                altField: '#' + id + "_startdate",
                altFormat: 'yy-mm-dd'
        }).val(startdate);

        $(enddateHolder).find(".date-input").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yy',
                altField: '#' + id + "_enddate",
                altFormat: 'yy-mm-dd'
        }).val(enddate);

