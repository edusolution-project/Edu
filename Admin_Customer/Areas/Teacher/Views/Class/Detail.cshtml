        enddateHolder.find(':visible').remove();
        startdateHolder.find(':not(:visible)').show();
        enddateHolder.find(':not(:visible)').show();
        wrapper.find('.action:visible').remove();
        wrapper.find('.action:not(:visible)').show();
    }

