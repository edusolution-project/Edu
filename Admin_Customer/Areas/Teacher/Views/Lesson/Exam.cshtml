@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    var Data = ViewBag.Data as BaseCustomerEntity.Database.LessonEntity;
    var Class = ViewBag.Class as BaseCustomerEntity.Database.ClassEntity;
}
<!-- Page Heading -->
<span class="number quizNumber" onclick="openNav()"><span class="completed">0</span> / <span class="total">0</span></span>
<div id="lessonContainer">
</div>

<input type="hidden" id="LessonID" value="@Data.ID" />
<input type="hidden" id="ClassID" value="@Class.ID" />
<script>
    $(document).ready(function () {
        load.lesson($("#LessonID").val(), $("#ClassID").val());
    });
</script>
@section Script{
<script src="~/js/teacher-exam.js"></script>
}
<script>
    function openNav() {
        $('#lessonContainer').addClass('col-md-10');
        $("#quizNavigator").show();
    }

    function closeNav() {
        $('#lessonContainer').removeClass('col-md-10');
        $("#quizNavigator").hide();
    }

</script>
<div id="quizNavigator" class="overlay">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div class="overlay-content card-body">
        <div class="input-group mb-3 quiz-wrapper">
                
        </div>

        <div class="d-flex justify-content-center pt-5 pb-5">
            <button class="btn btn-primary" onclick="goBack();"> Hoàn thành</button>
        </div>
    </div>
</div>