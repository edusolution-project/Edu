@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    var Data = ViewBag.Data as BaseCustomerEntity.Database.LessonEntity;
    var Class = ViewBag.Class as BaseCustomerEntity.Database.ClassEntity;
}

    <div class="container-fluid">
        <div class="breadcumb" style="padding: 0 0 15px; font-weight:bold;">
            <a href="@Url.Action("Detail","Class")/@Class.ID">@Class.Name</a>
        </div>
        <!-- Page Heading -->
        <div id="lessonContainer">
        </div>

        <input type="hidden" id="LessonID" value="@Data.ID" />
        <input type="hidden" id="ClassID" value="@Class.ID" />
    </div>

<script>
    $(document).ready(function () {
        load.lesson($("#LessonID").val(), $("#ClassID").val());
    });
</script>
@section Script{
    <script src="~/js/teacher-exam.js"></script>
}