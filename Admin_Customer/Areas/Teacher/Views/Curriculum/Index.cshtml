
@{
    ViewData["Title"] = "Quản lý giáo trình";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    var listGrade = ViewBag.Grade as List<BaseCustomerEntity.Database.GradeEntity>;
    var listSubject = ViewBag.Subject as List<BaseCustomerEntity.Database.SubjectEntity>;
    var listModGrade = ViewBag.ModGrade as List<BaseCustomerEntity.Database.ModGradeEntity>;
    var listModSubject = ViewBag.ModSubject as List<BaseCustomerEntity.Database.ModSubjectEntity>;
    var user = ViewBag.User as string;
}

<!-- Begin Page Content -->
    <div class="container">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-lg-6">
                        <h4 class="m-0 font-weight-bold text-primary">Thông tin giáo trình</h4>
                    </div>
                    <div class="col-lg-6">
                        <div class="float-right">
                            <button type="button" onclick="addCourse()" class="btn btn-primary" data-placement="top" title="Tạo giáo trình" data-toggle="modal" data-target="#courseModal"> <i class="fas fa-plus"></i> </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="search-filter">
                    <div class="form-row">
                        <div class="form-group row col-md-4">
                            <label for="staticText" class="col-sm-4 col-form-label">Môn học:</label>
                            <div class="col-sm-8">
                                <select id="SubjectID" class="form-control" onchange="LoadGrade(this)">
                                    @{
                                        for (int i = 0; listSubject != null && i < listSubject.Count; i++)
                                        {
                                            <option value="@listSubject[i].ID">@listSubject[i].Name</option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row col-md-4 offset-md-4">
                            <label for="staticText" class="col-sm-4 col-form-label">Trình độ:</label>
                            <div class="col-sm-8">
                                <select id="GradeID" class="form-control" onchange="LoadCourse()">
                                    @{
                                        for (int i = 0; listGrade != null && i < listGrade.Count; i++)
                                        {
                                            <option value="@listGrade[i].ID" for="@listGrade[i].SubjectID">@listGrade[i].Name</option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="tblCurriculum" class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên giáo trình</th>
                                <th>Tên môn học</th>
                                <th>Cấp độ</th>
                                <th>Mô tả</th>
                                <th>Người tạo</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="card shadow clone mt-4">
            <div class="card-header">
                <h4 class="m-0 font-weight-bold text-primary">Kho giáo trình</h4>
            </div>
            <div class="card-body">
                <div class="search-filter">
                    <div class="form-row">
                        <div class="form-group row col-md-4">
                            <label for="staticText" class="col-sm-4 col-form-label">Môn học:</label>
                            <div class="col-sm-8">
                                <select id="ModSubjectID" class="form-control" onchange="LoadModGrade(this)">
                                    @{
                                        for (int i = 0; listModSubject != null && i < listModSubject.Count; i++)
                                        {
                                            <option value="@listModSubject[i].ID">@listModSubject[i].Name</option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row col-md-4 offset-md-4">
                            <label for="staticText" class="col-sm-4 col-form-label">Trình độ:</label>
                            <div class="col-sm-8">
                                <select id="ModGradeID" class="form-control" onchange="LoadModCourse()">
                                    @{
                                        for (int i = 0; listModGrade != null && i < listModGrade.Count; i++)
                                        {
                                            <option value="@listModGrade[i].ID" for="@listModGrade[i].SubjectID">@listModGrade[i].Name</option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="modCourseWrapper" class="card-deck">
                    <div class="card">
                        <img src="~/img/english.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Combo "Hack não 1500 từ tiếng Anh" + "Hack não IELTS" (Trọn bộ 3 cuốn)</h5>
                            <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            <button type="button" class="btn btn-primary"><i class="fas fa-download"></i> Tải về</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
        <!-- End of Main Content -->

        <div class="modal fade edit-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="courseModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">Sửa thông tin</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="@Url.Action("CreateOrUpdate","Curriculum")" id="modal-body" name="modalForm" enctype="multipart/form-data" method="post">
                            <input type="hidden" name="ID" />
                            <input type="hidden" name="CreateUser" value="@user" />
                            <input type="hidden" name="IsActive" value="false" />
                            <div class="form-group">
                                <label class="col-form-label">Tên giáo trình:</label>
                                <input type="text" class="form-control" name="Name" required>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Môn học:</label>
                                <select name="SubjectID" class="form-control" onchange="ChangeGrade(this)">
                                    @{
                                        for (int i = 0; listSubject != null && i < listSubject.Count; i++)
                                        {
                                            <option value="@listSubject[i].ID">@listSubject[i].Name</option>
                                        }

                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Cấp độ:</label>
                                <select Name="GradeID" class="form-control">
                                    @{
                                        for (int i = 0; listGrade != null && i < listGrade.Count; i++)
                                        {
                                            <option value="@listGrade[i].ID" for="@listGrade[i].SubjectID">@listGrade[i].Name</option>
                                        }

                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Mô tả:</label>
                                <textarea class="form-control" name="Description"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary" onclick="return Submit('modalForm', '@Url.Action("CreateOrUpdate","Curriculum")','update' , ReloadCourse)">Lưu lại</button>
                    </div>
                </div>
            </div>
        </div>


<script>

    var modal = $("#courseModal");
    var modalTitle = $("#modalTitle");
    var containerLesson = $("#lessonContainer");
    var userID = "";
    var clientID = "";

    function LoadCourse() {
        var searchText = $("#searchText").val();
        var subject = $("#SubjectID").val();
        var grade = $("#GradeID").val();
        showLoading();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetList", "Curriculum")',
            data: { SearchText: searchText, SubjectID: subject, GradeID: grade },
            dataType:"json",
            success: function (data) {
                var body = $('#tblCurriculum tbody');
                body.html("");
                if (data.Data.length > 0)
                {
                    for (i = 0; i < data.Data.length; ++i) {
                        item = data.Data[i];
                        var active = "";
                        if (item.IsActive) {
                            active = "<td><button onclick=\"ExcuteOnlyItem('" + item.ID + "','@Url.Action("unpublish", "Curriculum")',ToggleStatus(this))\" type='button' data-toggle='button' aria-pressed='true' autocomplete='off' class='btn btn-lg btn-toggle active btn-success'> <div class='handle'></div> </button></td>";
                        } else {
                            active = "<td><button onclick=\"ExcuteOnlyItem('" + item.ID + "','@Url.Action("publish", "Curriculum")',ToggleStatus(this))\" type='button' data-toggle='button' aria-pressed='true' autocomplete='off' class='btn btn-lg btn-toggle btn-danger'> <div class='handle'></div> </button></td>";
                        }
                        var created = $.datepicker.formatDate('dd/mm/yy', new Date(item.Created));

                        body.append("<tr>" +
                            "<td>" + (i + 1) + "</td>" +
                            "<td class=\"Name\"><a href='@Url.Action("Detail","Curriculum")/" + item.ID + "'>" + item.Name + "</td>" +
                            "<td class=\"Subject\" val=\"" + item.SubjectID + "\">" + item.SubjectName + "</td>" +
                            "<td class=\"Grade\" val=\"" + item.GradeID + "\">" + item.GradeName + "</td>" +
                            "<td class=\"Description\">" + (item.Description == null ? "": item.Description) + "</td>" +
                            "<td>" + item.TeacherName + "</td>" +
                            "<td>" + created + "</td>" + active +
                            "<td><button type=\"button\" class=\"btn btn-primary\" data-toggle=\"modal\" data-target=\"#courseModal\"  onclick=\"EditCourse(this,'" + item.ID + "')\" data-placement=\"top\" title=\"Sửa\"> <i class=\"fas fa-edit\"></i> </button>" +
                            "<button type=\"button\" class=\"btn btn-remove btn-danger\" onclick=\"if(confirm('Chắc chắn xóa?')){ ExcuteOnlyItem('" + item.ID + "', '@Url.Action("Remove","Curriculum")', ReloadCourse)}\" data-placement=\"top\" title=\"Xóa\"> <i class=\"fas fa-trash\"></i> </button></td>" +
                            "</tr>"
                        );
                    }
                    $('.btn').tooltip();
                }
                hideLoading();
            },
            error: function() {
                alert("Error");
                hideLoading();
            }
        });
    };

    function LoadModCourse() {
        var searchText = $("#searchText").val();
        var subject = $("#ModSubjectID").val();
        var grade = $("#ModGradeID").val();
        showLoading();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetModList", "Curriculum")',
            data: { SearchText: searchText, SubjectID: subject, GradeID: grade },
            dataType:"json",
            success: function (data) {
                var body = $('#modCourseWrapper');
                body.html("");
                if (data.Data.length > 0)
                {
                    for (i = 0; i < data.Data.length; ++i) {
                        item = data.Data[i];
                        var active = "<td><button type='button' data-toggle='button' aria-pressed='true' autocomplete='off' class='btn btn-lg btn-toggle active btn-success'> <div class='handle'></div> </button></td>";

                        body.append("<div class='item mb-4 col-md-4'>" +
                            "<div class='card'>" +
                            "<img src='../img/english.jpg' class='card-img-top' alt='...'>" +
                            "<div class='card-body'>" +
                                "<h5 class=\"card-title\">" + item.Name + "</h5>" +
                                "<p class=\"card-text\">" + item.Name + "</p>" +
                                "<button type=\"button\" class=\"btn btn-primary\" onclick=\"Take('" + item.ID + "')\"><i class=\"fas fa-download mr-2\"></i>Tải về</button>" +
                            "</div>" +
                            "</div>" +
                            "</div>"
                        );
                    }
                }
                hideLoading();
            },
            error: function() {
                alert("Error");
                hideLoading();
            }
        });
    };

    function Take(rootCourseID) {
        if (confirm("Xác nhận tải giáo trình này?")) {
            var subject = $("#SubjectID").val();
            var grade = $("#GradeID").val();
            showLoading();
            $.ajax({
                type: "POST",
                url: '@Url.Action("Clone", "Curriculum")',
                data: { CourseID: rootCourseID, SubjectID: subject, GradeID: grade },
                dataType: "json",
                success: function (data) {
                    if (data == "OK")
                        LoadCourse();
                    hideLoading();
                },
                error: function () {
                    alert("Error");
                    hideLoading();
                }
            });
        }
    }

    function ChangeGrade(obj, wrapper) {
        var subject = $(obj).val();
        var grade = $(wrapper).val();
        $(wrapper).find('option[for!=' + subject + ']').hide();
        $(wrapper).find('option[for=' + subject + ']').show();
        if ($(wrapper).find('option[for!=' + subject + '][value=' + grade + ']:visible').length == 0) {
            $(wrapper).val($(wrapper).find('option[for=' + subject + ']:first').attr('value'));
        }
    }

    function LoadGrade(obj) {
        ChangeGrade(obj,'#GradeID');
        LoadCourse();
    }

    function LoadModGrade(obj) {
        ChangeGrade(obj,'#ModGradeID');
        LoadModCourse();
    }

    $(document).ready(function () {
        LoadGrade($("#SubjectID"));
        LoadModGrade($("#ModSubjectID"));
    });

    function showLoading() {
        if ($("body > .loadingState").length > 0)
            return;
        else {
            $("body").append($("<div>", { "class": "loadingState", "style": "background: black;position: fixed;top: 0;left: 0;right: 0;bottom: 0;opacity: 0.9;z-index: 9999;" }));
            $("body > .loadingState").append($("<div>", { "text": "Đang nạp dữ liệu...", "style":"padding:10px 50px; border-radius: 10px; background: #CCC; font-size:26px; position:absolute; left: calc(50% - 120px); top: 45%;" }));
        }
    }

    function hideLoading() {
        $("body > .loadingState").remove();
    }

    function EditCourse(obj, ID) {
        modalTitle.text("Cập nhật nội dung");
        var name = $(obj).parent().siblings(".Name").text().trim();
        modal.find("[name=Name]").val(name);
        var subject = $(obj).parent().siblings(".Subject").attr("val");
        var grade = $(obj).parent().siblings(".Grade").attr("val");
        var sbj = modal.find("[name=SubjectID]");
        var grd = modal.find("[name=GradeID]");
        sbj.val(subject);
        ChangeGrade(sbj,grd);
        $(grd).val(grade);
        var description = $(obj).parent().siblings(".Description").text().trim();
        modal.find("[name=Description]").val(description);
        modal.find("[name=ID]").val(ID);
    }

    function addCourse() {
        modalTitle.text("Tạo giáo trình");
        modal.find("[name=Name]").val("");
        modal.find("[name=ID]").val("");
        modal.find("[name=Description]").val("");
        var sbj = modal.find("[name=SubjectID]");
        var grd = modal.find("[name=GradeID]");
        ChangeGrade(sbj,grd);
    }

    function DeleteCourse(obj, ID) {
        var modalForm = $(window.modalForm);
        showModal();
        modalTitle.html("Chọn Template");
        modalForm.html(template.Type('lesson'));
    }

    function ReloadCourse(e){
        console.log(e);
        hideModal();
        LoadCourse();
    }

    var showModal = function () {
        modal.modal('show');
    };

    var hideModal = function () {
        modal.modal('hide');
        };

</script>