<script>

    function LoadMyClass() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetActiveList", "MyCourse")',
            data: { },
            dataType:"json",
            success: function (data) {
                var body = $('#myclassWrapper');
                body.html("");
                if (data.Data.length > 0)
                {
                    for (i = 0; i < data.Data.length; ++i) {
                        item = data.Data[i];
                        body.append("<a href=\"@Url.Action("Detail", "MyCourse")/" + item.ID + "\">" +
                                        "<div class='course-item'>" +
                                        "<div class='course-info'>" +
                                            "<h3>" + item.SubjectName + "</h3>" +
                                            "<h4>" + item.Name + "</h4>" +
                                            "<div class='action-wrapper'>" +
                                                "<a class='actionlink announcement' href='@Url.Action("News", "MyCourse")/" + item.ID + "'></a>" +
                                                "<a class='actionlink assignment' href='@Url.Action("Assignment", "MyCourse")/" + item.ID + "'></a>" +
                                                "<a class='actionlink comment' href='@Url.Action("Comments", "MyCourse")/" + item.ID + "'></a>" +
                                            "</div>" +
                                        "</div>" +
                                    "</div></a>");
                    }
                }
            },
            error: function() {
                alert("Error");
            }
        });
    }

    function LoadTodayLesson() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetTodayLessons", "LessonToday")',
            data: {date: $.datepicker.formatDate('mm-dd-yy', new Date())},
            dataType:"json",
            success: function (data) {
                var body = $('#tbTodayLesson tbody');
                body.html("");
                if (data.Data.length > 0)
                {
                    for (i = 0; i < data.Data.length; ++i) {
                        item = data.Data[i];
                        body.append("<tr><td colspan=\"2\"><a href=\"@Url.Action("Detail", "MyCourse")/" + item.ClassID + "\">"  +  item.SubjectName + "</a></td></tr>" +
                            "<tr>" +
                                "<td>" + (i + 1) + "</td>" +
                                "<td><a class='links' href='@Url.Action("LessonStudent", "LessonToday")/" + item.ID + "/" + item.ClassID + "'>" + item.Title + "</a></td>" +
                            "</tr>");
                    }
                }
            },
            error: function() {
                alert("Error");
            }
        });
    }

    $(document).ready(function(){
        LoadMyClass();
        LoadTodayLesson();
    });
</script>
