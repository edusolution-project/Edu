@{
    ViewData["Title"] = "Quản lý giáo viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var role = ViewBag.Roles as List<BaseCustomerEntity.Database.RoleEntity>;
    var subject = ViewBag.Subject as List<BaseCustomerEntity.Database.SubjectEntity>;
}

<!-- Begin Page Content -->
<div class="container-fluid">
    @using (Html.BeginForm(FormMethod.Post, new { name = "FormControl" }))
    {
        <input type="hidden" name="ArrID" value="" />
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-lg-6">
                        <h4 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h4>
                    </div>
                    <div class="col-lg-6">
                        <div class="float-right">
                            <button type="button" class="btn btn-primary" onclick="Add(this)" data-placement='top' title='Thêm giáo viên' data-toggle="modal" data-target="#ModalCenter"> <i class="fas fa-plus"></i> </button>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-modal-lg"> <i class="fas fa-upload"></i> </button>
                            <button type="button" class="btn btn-primary" onclick="Export('FormControl','@Url.Action("Export", "teacher" )')"> <i class="fas fa-file-export"></i> </button>
                            <button type="button" class="btn btn-danger" onclick="var result = confirm('bạn có chắc muốn xóa không ?'); if (result) Submit('FormControl','@Url.Action("Delete","teacher")','delete',LoadData);"> <i class="fas fa-trash"></i> </button>
                            @*<button type="button" class="btn btn-danger" onclick="var result = confirm('bạn có chắc muốn xóa không ?'); if (result) Submit('FormControl','@Url.Action(" Delete","teacher")','delete',LoadData);"> <i class="fas fa-trash"></i> </button>
                                <button type="button" class="btn btn-primary" onclick="Add(this)" data-toggle="modal" data-target="#ModalCenter"> <i class="fas fa-plus"></i> </button>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-modal-lg"> <i class="fas fa-upload"></i> </button>
                                <button type="button" class="btn btn-primary" onclick="Export('FormControl','@Url.Action(" Export", "teacher" )')"> <i class="fas fa-file-export"></i> </button>*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    <div class="input-group"><input type="checkbox" aria-label="Checkbox" onclick="toggleAll(this, 'dataTable')"></div>
                                </th>
                                <th>STT</th>
                                <th>Mã GV</th>
                                <th>Email</th>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Chuyên môn</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    }
</div>

<!-- Modal Create Form -->
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        @using (Html.BeginForm("Create", "teacher", FormMethod.Post, new { enctype = "multipart/form-data", name = "AddForm" }))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalCenterTitle">Tạo tài khoản</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" name="TeacherId" id="inputName" placeholder="Mã giáo viên" required>
                            </div>
                            <div class="form-group col-md-6">
                                <select name="Subjects" class="form-control">
                                    @{
                                        for (int i = 0; subject != null && i < subject.Count; i++)
                                        {
                                            <option value="@subject[i].ID">@subject[i].Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="FullName" id="inputText" placeholder="Họ và tên">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="email" class="form-control" name="Email" id="inputEmail" placeholder="Email" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" name="Phone" id="inputPhone" placeholder="Số điện thoại">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control datepicker" placeholder="Ngày sinh">
                                <input type="hidden" name="DateBorn" class="hiddenDate" id="DateBorn" value="">
                            </div>
                            <div class="form-group row col-md-6">
                                <label for="staticText" class="col-sm-4 col-form-label">Trạng thái:</label>
                                <div class="col-sm-8">
                                    <select id="input-option" name="IsActive" class="form-control">
                                        <option value="true" selected>Hoạt động</option>
                                        <option value="false">Không hoạt động</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="Submit('AddForm','@Url.Action("Create", "teacher" )','create',LoadData)">Lưu lại</button>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal choose file -->
<div class="modal fade bd-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("Import", "teacher", FormMethod.Post, new { enctype = "multipart/form-data", name = "ImportForm" }))
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalCenterTitle">Thêm nhanh từ file</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3 form-label p-3" for="FormControlFile">Chọn file excel:</label>
                            <div class="chose-file col-sm-9">
                                <input type="file" name="file" class="form-control-file" id="FormControlFile">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="button-left">
                        <button type="button" class="btn btn-secondary">Tải file mẫu</button>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="Submit('ImportForm','','import',LoadData)">Lưu lại</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    $('.datepicker').each(function () {
        var fieldID = $(this).next().attr("id");
        $(this).datepicker({
            dateFormat: 'dd/mm/yy',
            altField: '#' + fieldID,
            altFormat: 'mm/dd/yy'
        }).val("");
    })

    function LoadData() { var searchText = $("#searchText").val();var startDate = $("#startDate_sort").val();var endDate = $("#endDate_sort").val();
        hideModal();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetList", "teacher")',
            data: {SearchText: searchText,StartDate: startDate,EndDate: endDate},
            dataType:"json",
            success: function (data) {
                var body = $('#dataTable tbody');
                body.html("");
                if (data.Data.length > 0)
                {
                    for (i = 0; i < data.Data.length; ++i) {
                        item = data.Data[i];
                        console.log(item);
                        var active = "";
                        if (item.IsActive) {
                            active = "<td><button onclick=\"ExcuteOnlyItem('" + item.ID + "','@Url.Action("unpublish", "teacher")',LoadData)\" type='button' data-toggle='button' aria-pressed='true' autocomplete='off' class='btn btn-lg btn-toggle active btn-success'> <div class='handle'></div> </button></td>";
                        } else {
                            active = "<td><button onclick=\"ExcuteOnlyItem('" + item.ID + "','@Url.Action("publish", "teacher")',LoadData)\" type='button' data-toggle='button' aria-pressed='true' autocomplete='off' class='btn btn-lg btn-toggle btn-danger'> <div class='handle'></div> </button></td>";
                        }
                        var subject = "";
                        if (item.SubjectList != null && item.SubjectList.length > 0) {
                            for (j = 0; j < item.SubjectList.length; ++j) {
                                subject += item.SubjectList[j].Name + "<br/>";
                            }
                        }
                        var date = $.datepicker.formatDate('dd/mm/yy', new Date(item.DateBorn));

                        body.append("<tr>" +
                            "<td><div class='input-group'><input name='cid' type='checkbox' value='" + item.ID +"' onclick=\"setToggle('dataTable')\"/></div></td>"+
                            "<td>" + (i + 1) + "</td>" +
                            "<td>" + ((item.TeacherId == null) ? "" : item.TeacherId) + "</td>" +
                            "<td>" + item.Email + "</td>" +
                            "<td>" + item.FullName + "</td>" +
                            "<td>" + date + "</td>" +
                            "<td>" + subject + "</td>" + active +
                            "<td><button onclick=\"Edit('" + item.ID + "','@Url.Action("getdetails", "teacher")','@Url.Action("create", "teacher")',this)\" type='button' class='btn btn-primary' data-toggle='modal' data-target='#ModalCenter'> <i class='fas fa-edit'></i> </button>" +
                            "<button onclick=\"var result = confirm('bạn muốn xóa đối tượng " + item.TeacherId + " ? '); if(result) ExcuteOnlyItem('" + item.ID + "','@Url.Action("delete", "teacher")',LoadData); else return;\" type='button' class='btn btn-danger'> <i class='fas fa-trash'></i> </button>" +
                            "</td > " +
                            "</tr>"
                        );
                    }
                }
            },
            error: function() {
                alert("Error");
            }
        });
    };

    $(document).ready(function () {
        LoadData();
    });
</script>
